extends layout

block link
    -var selected = '/contact';

block content
    section.contact
        p.title.center Drop us a message, we will be glad to hear from you...
        form.cf(method='POST' action='/contact')
                div.half.left.cf
                    div.form-group
                        label(for='name') Name:
                        input#name.form-control(type='text', placeholder='first and last' name='name')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email', placeholder='name@email.com' name='email')
                    div.form-group
                        label(for='subject') Subject:
                        input#subject.form-control(type='subject', placeholder='subject' name='subject')
                div.half.right.cf
                    div.form-group
                        label(for='message') Message:
                        textarea#notes.form-control(type='text', placeholder='' name='message')

                input(id='input-submit', type='submit', value='Submit')